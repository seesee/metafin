{
  "name": "metafin",
  "version": "0.1.0",
  "description": "A comprehensive metadata management tool for Jellyfin",
  "repository": {
    "type": "git",
    "url": "https://github.com/seesee/metafin.git"
  },
  "license": "MIT",
  "author": "Chris Carline",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "dotenv -e .env.development -- pnpm -r --parallel dev",
    "dev:staging": "dotenv -e .env.staging -- pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:staging": "dotenv -e .env.staging -- pnpm -r build",
    "build:production": "dotenv -e .env.production -- pnpm -r build",
    "start": "dotenv -e .env.production -- pnpm -r start",
    "start:staging": "dotenv -e .env.staging -- pnpm -r start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "db:migrate": "dotenv -e .env.development -- pnpm --filter backend db:migrate",
    "db:migrate:staging": "dotenv -e .env.staging -- pnpm --filter backend db:migrate",
    "db:migrate:production": "dotenv -e .env.production -- pnpm --filter backend db:migrate",
    "db:seed": "dotenv -e .env.development -- pnpm --filter backend db:seed",
    "db:reset": "dotenv -e .env.development -- pnpm --filter backend db:reset",
    "docker:build": "docker build -t metafin .",
    "docker:run": "docker run -p 8080:8080 -v metafin-data:/data metafin",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^7.4.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.46.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.0",
    "svelte-eslint-parser": "^1.3.2",
    "typescript": "^5.3.0"
  }
}
